<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analyst Portal - Wildfire Intelligence Platform</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            line-height: 1.6;
            color: #333;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 2rem;
        }
        .header {
            text-align: center;
            margin-bottom: 3rem;
            color: white;
        }
        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }
        .header .badge {
            background: rgba(255, 255, 255, 0.2);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            display: inline-block;
        }
        .analytics-dashboard {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }
        .analytics-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }
        .analyst-card {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .analyst-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }
        .analyst-card h3 {
            color: #667eea;
            margin-bottom: 1rem;
            font-size: 1.3rem;
            display: flex;
            align-items: center;
        }
        .analyst-card .icon {
            font-size: 1.5rem;
            margin-right: 0.5rem;
        }
        .analyst-card p {
            color: #666;
            margin-bottom: 1.5rem;
        }
        .chart-container {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }
        .chart-container h3 {
            color: #667eea;
            margin-bottom: 1rem;
        }
        .canvas-container {
            position: relative;
            height: 300px;
            margin-bottom: 1rem;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }
        .stat-card {
            background: rgba(255, 255, 255, 0.95);
            padding: 1.5rem;
            border-radius: 8px;
            text-align: center;
        }
        .stat-value {
            font-size: 2rem;
            font-weight: bold;
            color: #667eea;
        }
        .stat-label {
            color: #666;
            font-size: 0.9rem;
        }
        .data-table {
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .data-table table {
            width: 100%;
            border-collapse: collapse;
        }
        .data-table th {
            background: #667eea;
            color: white;
            padding: 1rem;
            text-align: left;
        }
        .data-table td {
            padding: 0.8rem 1rem;
            border-bottom: 1px solid #eee;
        }
        .data-table tr:hover {
            background: #f8f9ff;
        }
        .btn {
            display: inline-block;
            padding: 0.6rem 1.2rem;
            background: #667eea;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-size: 0.9rem;
            transition: background 0.3s ease;
            border: none;
            cursor: pointer;
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
        }
        .btn:hover {
            background: #5a67d8;
        }
        .btn.secondary {
            background: #718096;
        }
        .btn.secondary:hover {
            background: #2d3748;
        }
        .btn.success {
            background: #38a169;
        }
        .btn.success:hover {
            background: #2f855a;
        }
        .filters {
            background: rgba(255, 255, 255, 0.95);
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            display: flex;
            gap: 1rem;
            align-items: center;
            flex-wrap: wrap;
        }
        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 0.3rem;
        }
        .filter-group label {
            font-size: 0.9rem;
            color: #666;
        }
        select, input {
            padding: 0.5rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 0.9rem;
        }
        .footer {
            text-align: center;
            color: white;
            opacity: 0.8;
            margin-top: 3rem;
        }
        .login-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }
        .login-form {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
        }
        .login-form h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #667eea;
        }
        .form-group {
            margin-bottom: 1rem;
        }
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #666;
        }
        .form-group input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 1rem;
        }
        .login-btn {
            width: 100%;
            padding: 0.75rem;
            background: #667eea;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            cursor: pointer;
            transition: background 0.3s ease;
        }
        .login-btn:hover {
            background: #764ba2;
        }
        .error-message {
            color: #e74c3c;
            text-align: center;
            margin-top: 1rem;
            display: none;
        }
        .hidden {
            display: none;
        }
        .trend-indicator {
            display: inline-block;
            padding: 0.2rem 0.5rem;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: bold;
        }
        .trend-up {
            background: #fed7e2;
            color: #c53030;
        }
        .trend-down {
            background: #c6f6d5;
            color: #2f855a;
        }
        .trend-stable {
            background: #bee3f8;
            color: #2b6cb0;
        }
    </style>
</head>
<body>
    <div class="login-overlay" id="login-overlay">
        <div class="login-form">
            <h2>📊 Analyst Portal Login</h2>
            <form id="login-form">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required placeholder="admin@data.gov">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required placeholder="admin">
                </div>
                <button type="submit" class="login-btn">Login</button>
                <div class="error-message" id="error-message">Invalid credentials. Please try again.</div>
            </form>
        </div>
    </div>

    <div class="container hidden" id="main-content">
        <div class="header">
            <h1>📊 Analyst Portal</h1>
            <div class="badge">Advanced Data Analytics & Intelligence</div>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-value">2.4M</div>
                <div class="stat-label">Data Points Analyzed</div>
                <div class="trend-indicator trend-up">↑ 15%</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">847</div>
                <div class="stat-label">Fire Incidents (YTD)</div>
                <div class="trend-indicator trend-down">↓ 8%</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">94.2%</div>
                <div class="stat-label">Prediction Accuracy</div>
                <div class="trend-indicator trend-up">↑ 2.1%</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">156K</div>
                <div class="stat-label">Acres Monitored</div>
                <div class="trend-indicator trend-stable">→ 0%</div>
            </div>
        </div>

        <div class="filters">
            <div class="filter-group">
                <label>Time Range</label>
                <select id="timeRange">
                    <option value="7d">Last 7 Days</option>
                    <option value="30d" selected>Last 30 Days</option>
                    <option value="90d">Last 90 Days</option>
                    <option value="1y">Last Year</option>
                </select>
            </div>
            <div class="filter-group">
                <label>Region</label>
                <select id="region">
                    <option value="all" selected>All Regions</option>
                    <option value="norcal">Northern California</option>
                    <option value="socal">Southern California</option>
                    <option value="central">Central Valley</option>
                </select>
            </div>
            <div class="filter-group">
                <label>Risk Level</label>
                <select id="riskLevel">
                    <option value="all" selected>All Levels</option>
                    <option value="critical">Critical</option>
                    <option value="high">High</option>
                    <option value="medium">Medium</option>
                    <option value="low">Low</option>
                </select>
            </div>
            <button class="btn" onclick="applyFilters()">Apply Filters</button>
            <button class="btn secondary" onclick="exportData()">Export Data</button>
        </div>

        <div class="analytics-dashboard">
            <div class="chart-container">
                <h3>🔥 Fire Risk Trends</h3>
                <div class="canvas-container">
                    <canvas id="riskChart"></canvas>
                </div>
            </div>
            <div class="chart-container">
                <h3>🌡️ Weather Pattern Analysis</h3>
                <div class="canvas-container">
                    <canvas id="weatherChart"></canvas>
                </div>
            </div>
        </div>

        <div class="analytics-dashboard">
            <div class="chart-container">
                <h3>📈 Incident Response Times</h3>
                <div class="canvas-container">
                    <canvas id="responseChart"></canvas>
                </div>
            </div>
            <div class="chart-container">
                <h3>💧 Resource Deployment Efficiency</h3>
                <div class="canvas-container">
                    <canvas id="resourceChart"></canvas>
                </div>
            </div>
        </div>

        <div class="analytics-section">
            <div class="analyst-card">
                <h3><span class="icon">🔍</span>Predictive Analytics</h3>
                <p>Advanced machine learning models for fire risk prediction, resource optimization, and incident forecasting.</p>
                <button class="btn" onclick="openPredictiveModels()">View Models</button>
                <button class="btn secondary" onclick="trainNewModel()">Train Model</button>
            </div>

            <div class="analyst-card">
                <h3><span class="icon">📊</span>Statistical Analysis</h3>
                <p>Comprehensive statistical analysis of fire patterns, seasonal trends, and correlation analysis.</p>
                <button class="btn" onclick="openStatistics()">View Statistics</button>
                <button class="btn secondary" onclick="generateReport()">Generate Report</button>
            </div>

            <div class="analyst-card">
                <h3><span class="icon">🗺️</span>Geospatial Intelligence</h3>
                <p>Spatial analysis, hotspot detection, risk mapping, and geographical pattern recognition.</p>
                <button class="btn" onclick="openGIS()">GIS Analysis</button>
                <button class="btn secondary" onclick="createHeatmap()">Risk Heatmap</button>
            </div>

            <div class="analyst-card">
                <h3><span class="icon">⚡</span>Real-time Monitoring</h3>
                <p>Live data streams, real-time alerts, and dynamic dashboard with customizable metrics.</p>
                <button class="btn" onclick="openLiveData()">Live Dashboard</button>
                <button class="btn secondary" onclick="setupAlerts()">Configure Alerts</button>
            </div>

            <div class="analyst-card">
                <h3><span class="icon">📋</span>Custom Reports</h3>
                <p>Build custom reports, automated scheduling, and data visualization for stakeholders.</p>
                <button class="btn" onclick="reportBuilder()">Report Builder</button>
                <button class="btn secondary" onclick="scheduledReports()">Schedule Reports</button>
            </div>

            <div class="analyst-card">
                <h3><span class="icon">🔄</span>Data Integration</h3>
                <p>Connect external data sources, API integrations, and automated data pipeline management.</p>
                <button class="btn" onclick="dataConnectors()">Data Sources</button>
                <button class="btn secondary" onclick="apiManagement()">API Management</button>
            </div>
        </div>

        <div class="data-table">
            <h3 style="padding: 1rem; background: #f8f9ff; margin: 0; color: #667eea;">Recent Analysis Results</h3>
            <table>
                <thead>
                    <tr>
                        <th>Analysis Type</th>
                        <th>Location</th>
                        <th>Risk Score</th>
                        <th>Confidence</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Fire Risk Prediction</td>
                        <td>Riverside County</td>
                        <td><span class="trend-indicator trend-up">8.7/10</span></td>
                        <td>94%</td>
                        <td>2025-09-12</td>
                        <td>
                            <button class="btn" onclick="viewAnalysis('fire-risk-1')">View</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Resource Optimization</td>
                        <td>San Bernardino</td>
                        <td><span class="trend-indicator trend-down">3.2/10</span></td>
                        <td>87%</td>
                        <td>2025-09-12</td>
                        <td>
                            <button class="btn" onclick="viewAnalysis('resource-1')">View</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Weather Correlation</td>
                        <td>Statewide</td>
                        <td><span class="trend-indicator trend-stable">5.4/10</span></td>
                        <td>91%</td>
                        <td>2025-09-11</td>
                        <td>
                            <button class="btn" onclick="viewAnalysis('weather-1')">View</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Pattern Recognition</td>
                        <td>Los Angeles County</td>
                        <td><span class="trend-indicator trend-up">7.1/10</span></td>
                        <td>89%</td>
                        <td>2025-09-11</td>
                        <td>
                            <button class="btn" onclick="viewAnalysis('pattern-1')">View</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="footer">
            <p>📊 Advanced Analytics Platform - Wildfire Intelligence</p>
            <p>Real-time analysis • Predictive modeling • Statistical insights</p>
        </div>
    </div>

    <script>
        // Wait for DOM to be fully loaded
        document.addEventListener('DOMContentLoaded', function() {
            // Check if already logged in
            if (localStorage.getItem('analystPortalLoggedIn') === 'true') {
                document.getElementById('login-overlay').classList.add('hidden');
                document.getElementById('main-content').classList.remove('hidden');
                initCharts();
                return;
            }

            // Login functionality
            const loginForm = document.getElementById('login-form');
            if (loginForm) {
                loginForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    const emailInput = document.getElementById('email');
                    const passwordInput = document.getElementById('password');
                    const errorMsg = document.getElementById('error-message');
                    
                    if (!emailInput || !passwordInput) {
                        console.error('Login form elements not found');
                        return;
                    }
                    
                    const email = emailInput.value.trim();
                    const password = passwordInput.value.trim();
                    
                    console.log('Login attempt:', email, password); // Debug log
                    
                    // Check credentials
                    if (email === 'admin@data.gov' && password === 'admin') {
                        // Hide login overlay and show main content
                        document.getElementById('login-overlay').classList.add('hidden');
                        document.getElementById('main-content').classList.remove('hidden');
                        
                        // Store login state
                        localStorage.setItem('analystPortalLoggedIn', 'true');
                        localStorage.setItem('analystPortalUser', email);
                        
                        // Initialize charts after login
                        setTimeout(() => initCharts(), 100);
                    } else {
                        // Show error message
                        if (errorMsg) {
                            errorMsg.style.display = 'block';
                            setTimeout(() => {
                                errorMsg.style.display = 'none';
                            }, 3000);
                        }
                    }
                });
            }
        });

        // Initialize charts
        function initCharts() {
            // Fire Risk Trends Chart
            const riskCtx = document.getElementById('riskChart').getContext('2d');
            new Chart(riskCtx, {
                type: 'line',
                data: {
                    labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                    datasets: [{
                        label: 'Average Risk Score',
                        data: [6.2, 7.1, 8.3, 7.8],
                        borderColor: '#e53e3e',
                        backgroundColor: 'rgba(229, 62, 62, 0.1)',
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } }
                }
            });

            // Weather Chart
            const weatherCtx = document.getElementById('weatherChart').getContext('2d');
            new Chart(weatherCtx, {
                type: 'bar',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [{
                        label: 'Temperature (°F)',
                        data: [82, 85, 89, 92, 88, 84, 80],
                        backgroundColor: '#fd7014'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } }
                }
            });

            // Response Times Chart
            const responseCtx = document.getElementById('responseChart').getContext('2d');
            new Chart(responseCtx, {
                type: 'doughnut',
                data: {
                    labels: ['<5 min', '5-10 min', '10-15 min', '>15 min'],
                    datasets: [{
                        data: [45, 30, 15, 10],
                        backgroundColor: ['#38a169', '#ecc94b', '#ed8936', '#e53e3e']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });

            // Resource Efficiency Chart
            const resourceCtx = document.getElementById('resourceChart').getContext('2d');
            new Chart(resourceCtx, {
                type: 'radar',
                data: {
                    labels: ['Engines', 'Crews', 'Helicopters', 'Dozers', 'Air Tankers'],
                    datasets: [{
                        label: 'Efficiency %',
                        data: [85, 92, 78, 89, 76],
                        borderColor: '#667eea',
                        backgroundColor: 'rgba(102, 126, 234, 0.2)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            beginAtZero: true,
                            max: 100
                        }
                    }
                }
            });
        }

        // Mock functions for analyst actions
        function applyFilters() {
            alert('Applying filters... This would update all charts and data tables with filtered results.');
        }

        function exportData() {
            alert('Exporting data... This would generate CSV/Excel files with current filtered data.');
        }

        function openPredictiveModels() {
            alert('Predictive Models: Would open ML model management interface with training history, accuracy metrics, and model deployment options.');
        }

        function openStatistics() {
            alert('Statistical Analysis: Would display comprehensive statistical dashboard with correlation matrices, trend analysis, and hypothesis testing.');
        }

        function openGIS() {
            alert('GIS Analysis: Would launch geospatial analysis toolkit with mapping, spatial statistics, and risk visualization.');
        }

        function reportBuilder() {
            alert('Report Builder: Would open drag-and-drop report builder with customizable charts, tables, and layouts.');
        }

        function viewAnalysis(id) {
            alert(`Analysis Details: Would show detailed analysis results for ${id} including methodology, data sources, and recommendations.`);
        }

        // Initialize real-time updates for statistics
        setInterval(() => {
            const statValues = document.querySelectorAll('.stat-value');
            if (statValues.length > 0) {
                statValues[0].textContent = (2.4 + Math.random() * 0.1).toFixed(1) + 'M';
                if (statValues.length > 2) {
                    statValues[2].textContent = (94.2 + Math.random() * 0.8 - 0.4).toFixed(1) + '%';
                }
            }
        }, 10000);
    </script>
</body>
</html>